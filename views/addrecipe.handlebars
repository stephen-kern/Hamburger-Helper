<form class="add-recipe">
    <div class="title">
        <label for="recipe_title">Recipe Title:</label>
        <input type="text" id="recipeTitle" name="recipe_title"/>
    </div>
    <div class="desc">
        <label for="recipe_description">Recipe Description:</label>
        <input type="text" id="recipeDescrip"name="recipe_description" />
    </div>
    <div class="ingred">
        <label for="recipe_ingredients">Ingredients:</label>
        <input type="text" id="recipeIngred" name="recipe_ingredients" />
    </div>
    <div class="instruct">
        <label for="recipe_instructions">Instructions:</label>
        <input type="text" id="recipeInstruct" name="recipe_instructions"/>
    </div>
    <div class="totaltime">
        <label for="recipe_time">Total Time:</label>
        <input type="number" id="hoursTime" name="hoursTime" min="00" max="99">
    </div>
    
    {{!-- future development:categories and diets --}}
      {{!-- {{#each categories as |category|}}
      <p>{{category.category_name}}</p>
      {{/each}}
      {{#each diets as |diet|}}
      <p>{{diet.diet_name}}</p>
      {{/each}} --}}
     
    <div class="addBtn">
        <button type="submit">Add Recipe</button>
    </div>
</form>

<script src="/javascript/addrecipe.js"></script>



    