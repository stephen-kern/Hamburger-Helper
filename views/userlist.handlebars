<ul class="user-list">
  {{#each recipes as |recipe|}}
  <li>
    <article class="user-list">
        <div class="username">
            {{user.username}}
        </div>
        <div class="title">
            {{recipe.title}}
        </div>
        <div class="description">
            {{recipe.description}}
        </div>
        <div class="ingredients">
            {{recipe.ingredients}}
        </div>
        <div class="instructions">
            {{recipe.instructions}}
        </div>    
    </article>
  </li>
  {{/each}}
</ul>